<div>
	{{ attach_library('erpw_webform/erpw_service_rating_organisation_filter') }}
	<div class="service-ratings-org-filter-form">
		{{ org_filter_form }}
	</div>
	<div class="service-ratings-location-header">
		<div>
			<h1>{{ organisation_name }}</h1>
			<p>{{ organisation_total_services_count }}{{ ' Services'|t }}</p>
		</div>
		<div class="average-service-ratings-box">
			<div class="average-ratings-info">
				<p>{{ organisation_average }}</p>
				<span>{{ '(' }}{{ organisation_total_reviews }}{{ ')'|t }}</span>
			</div>
			<div id="overall-average-ratings" class="overall-average-star-rating">
				<span class="star">&#9733;</span>
				<span class="star">&#9733;</span>
				<span class="star">&#9733;</span>
				<span class="star">&#9733;</span>
				<span class="star">&#9733;</span>
			</div>
		</div>
	</div>

	<ul class="service-ratings-services-list">
	{% if service_list %}
		{% for data in service_list %}
			<li>
				<p class="service-name">
					{% if data.service_rating == 0 %}
						<span class="no-service-rating">{{ data.service_name }}</span>
					{% else %}
						<a href={{ data.service_link }}>{{ data.service_name }}</a>
					{% endif %}
				</p>
				<div class="rating-value-container">
					<p class="service-average-rating">
						{% apply spaceless %}
						{{ data.service_rating }}
						{% endapply %}
					</p>
					<div class="rating-arrow-image"></div>
				</div>
				<div id="service-star-rating-{{ data.service_rating }}" class="star-rating">
					<span class="star">&#9733;</span>
					<span class="star">&#9733;</span>
					<span class="star">&#9733;</span>
					<span class="star">&#9733;</span>
					<span class="star">&#9733;</span>
				</div>
				<p class="reviews">{{ '(' }}{{ data.service_review_count }}{{ ')' }}</p>
			</li>
		{% endfor %}
	{% else %}
	  {{ 'No Feedback Form available' | t }}
	{% endif %}	
	</ul>

	<div class="service-rating-enable-gbv-form">
		{{ service_rating_enable_gbv_form }}
	</div>

</div>
