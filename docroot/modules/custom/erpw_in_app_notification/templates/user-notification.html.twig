{% if role == 'staff' %}

	{% for item in service %}
		<div class="notification info-{{ item.read_status }}">
			<div class="icon">
				{% set imagestyle = {
                    '#theme':      'image_style',
                    '#style_name': 'thumbnail',
                    '#uri':        item.icon,
                    '#alt':        'icon',
                    '#attributes': { class: 'circular-image' },
                }
                %}
				{{ imagestyle }}
			</div>
			<div class="content">
				<p>{{ item.message }}</p>
				<p class="time">{{ item.created }}
					|
					{{ "Information"|t }}</p>
			</div>
		</div>
	{% endfor %}

{% endif %}

{% if role == 'focal_point' or role == 'gbv_coordination' %}
	<!-- Tab links -->
	<div class="tab">
		<button class="tablinks active" onclick="openTab(event, 'user')">{{ 'New Users'|t }}</button>
		<button class="tablinks" onclick="openTab(event, 'service')">{{ 'Service Updates'|t }}</button>
	</div>

	<!-- Tab content -->
	<div id="user" class="tabcontent notification__content" style="display:block;">
		{% for item in user %}
			{% if item.behavior == 'link' %}
				<a href="{{ item.link }}">
					<div class="notification link-{{ item.read_status }}">
						<div class="icon">
							{% set imagestyle = {
                            '#theme':      'image_style',
                            '#style_name': 'thumbnail',
                            '#uri':        item.icon,
                            '#alt':        'icon',
                            '#attributes': { class: 'circular-image' },
                        }
                        %}
							{{ imagestyle }}
						</div>
						<div class="content">
							<p class="notification-data">{{ item.message }}</p>
							<p class="time notification-status-data">{{ item.created }}
								|
								{{ "Approval"|t }}</p>
						</div>
					</div>
				</a>
			{% else %}
				<div class="notification info-{{ item.read_status }}">
					<div class="icon">
						{% set imagestyle = {
                            '#theme':      'image_style',
