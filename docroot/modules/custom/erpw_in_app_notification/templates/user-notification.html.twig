						</div>
					</div>
				</a>
			{% else %}
				<div class="notification info-{{ item.read_status }}">
					<div class="icon">
						{% set imagestyle = {
                            '#theme':      'image_style',
                            '#style_name': 'thumbnail',
                            '#uri':        item.icon,
                            '#alt':        'icon',
                            '#attributes': { class: 'circular-image' },
                        }
                        %}
						{{ imagestyle }}
					</div>
					<div class="content">
						<p class="notification-data">{{ item.message }}</p>
						<p class="time notification-status-data">{{ item.created }}
							|
							{{ "Information"|t }}</p>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div>
{% endif %}
