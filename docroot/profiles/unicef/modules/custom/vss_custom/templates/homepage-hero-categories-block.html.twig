{{ attach_library('vss_custom/homepage_hero_categories_block') }}
{{ attach_library('vss/carousal') }}

<div class="homepage-category">
  <div class="spacer"></div>
  <div  id="carousel" class="homepage-hero-section--categories categories-{{ content|length }}">
  {% for key,item in content %}
    <div class="category-item category-item-{{ key }}">
      <div class="category-thumbnail" style="background-color: {{ '#'~ item.color }}"><img src="{{ file_url( item.icon | image_style('thumbnail')) }}"/></div>
      <div class="category-name hide-desktop"><a href="{{ item.cat_uri }}">{{ item.name }} </a></div>
      <a class="hidden hover-show" href="{{ item.cat_uri }}">
        <div class="category-thumbnail--large" style="background-color: {{ '#'~ item.color }}"><img src="{{ file_url( item.icon | image_style('thumbnail')) }}"/></div>
        <p class="category-name-hover"> {{ item.name }} </p>
      </a>
    </div>
  {% endfor %}
  </div>
</div>
